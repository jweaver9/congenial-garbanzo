{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true // Added "node" environment
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:jsx-a11y/recommended", // Added "jsx-a11y" plugin
    "plugin:prettier/recommended" // Added "prettier" plugin
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "@typescript-eslint",
    "jsx-a11y", // Added "jsx-a11y" plugin
    "prettier" // Added "prettier" plugin
  ],
  "rules": {},
  "parser": "@typescript-eslint/parser"
}
